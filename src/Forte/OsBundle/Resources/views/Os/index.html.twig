{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Os list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Idcliente</th>
                <th>Eqto</th>
                <th>Iddefeito</th>
                <th>Idreparo</th>
                <th>Idsituacao</th>
                <th>Idtecnico</th>
                <th>Dataabertura</th>
                <th>Datafechamento</th>
                <th>Valorpecas</th>
                <th>Valormaoobra</th>
                <th>Desconto</th>
                <th>Valortotal</th>
                <th>Reparos</th>
                <th>Actions</th>
                
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('os_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.idCliente }}</td>
                <td>{{ entity.eqto }}</td>
                <td>{{ entity.idDefeito }}</td>
                <td>{{ entity.idReparo }}</td>
                <td>{{ entity.idSituacao }}</td>
                <td>{{ entity.idTecnico }}</td>
                <td>{% if entity.dataAbertura %}{{ entity.dataAbertura|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.dataFechamento %}{{ entity.dataFechamento|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.valorPecas }}</td>
                <td>{{ entity.valorMaoObra }}</td>
                <td>{{ entity.desconto }}</td>
                <td>{{ entity.valorTotal }}</td>
                <td></td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('os_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('os_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('os_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
