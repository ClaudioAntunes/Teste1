{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Reparo</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Servico</th>
                <td>{{ entity.servico }}</td>
            </tr>
            <tr>
                <th>Duracao</th>
                <td>{{ entity.duracao }}</td>
            </tr>
            <tr>
                <th>Valor</th>
                <td>{{ entity.valor }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('reparo') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('reparo_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
